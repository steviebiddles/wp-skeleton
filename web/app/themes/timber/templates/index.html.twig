{% extends "layouts/standard.html.twig" %}

{% block page_title %}Posts Page{% endblock %}

{% block main %}

    <div class="container">

        <div class="row">

            <div class="col-xs-12">

                {% for post in posts %}

                    <div class="row">

                        {% if post.thumbnail %}
                            <div class="col-xs-12 col-md-5">
                                <a href="{{ post.link }}" title="{{ post.title }}">
                                    <img src="{{ post.thumbnail.src('medium') }}" class="img-responsive" alt="Image for {{ post.title }}"/>
                                </a>
                            </div>
                        {% endif %}

                        <div class="col-xs-12 {% if post.thumbnail %}col-md-7{% else %}col-md-12{% endif %}">

                            <div class="post-body">
                                <h2 class="heading"><a href="{{ post.link }}">{{ post.title }}</a></h2>

                                {{ post.post_excerpt|wpautop }}
                            </div>
                        </div>

                    </div>

                {% endfor %}

            </div>

        </div>

    </div>

{% endblock %}